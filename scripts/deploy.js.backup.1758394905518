const { ethers } = require("hardhat");

async function main() {
  const [deployer] = await ethers.getSigners();
  console.log("ðŸš€ Deploying with account:", deployer.address);

  // --- 1. Deploy OPT Token (500,000 supply) ---
  const OPTToken = await ethers.getContractFactory("OPTToken");
  const opt = await OPTToken.deploy();
  await opt.waitForDeployment(); // Updated for ethers v6
  console.log("âœ… OPTToken deployed at:", await opt.getAddress());

  // Get deployment transaction hash
  const deploymentTx = opt.deploymentTransaction();
  if (deploymentTx) {
    console.log("ðŸ”— Deployment Transaction Hash:", deploymentTx.hash);
  }

  console.log("\nï¿½ OPT Token Deployment Complete!");
  console.log("OPT Token Address:", await opt.getAddress());
}

main().catch((error) => {
  console.error(error);
  process.exitCode = 1;
});
